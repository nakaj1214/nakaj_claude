{
  "version": "1.0.0",
  "description": "Recommended Claude Code settings for optimal development experience",

  "general": {
    "autoSave": true,
    "confirmBeforeExecute": false,
    "enableContextOptimization": true,
    "maxContextSize": 200000
  },

  "codeGeneration": {
    "preferExistingPatterns": true,
    "avoidOverEngineering": true,
    "securityFirst": true,
    "minimalistApproach": true,
    "testDrivenDevelopment": false
  },

  "communication": {
    "conciseResponses": true,
    "noEmojis": true,
    "professionalTone": true,
    "noTimeEstimates": true,
    "provideCodeReferences": true
  },

  "toolUsage": {
    "preferSpecializedTools": true,
    "parallelToolCalls": true,
    "useTodoForComplexTasks": true,
    "useExploreAgentForCodeExploration": true
  },

  "fileOperations": {
    "alwaysReadBeforeEdit": true,
    "preferEditOverWrite": true,
    "avoidUnnecessaryFiles": true,
    "useMarkdownLinks": true
  },

  "git": {
    "neverSkipHooks": true,
    "neverForcePush": true,
    "stageSpecificFiles": true,
    "descriptiveCommitMessages": true,
    "coAuthorCredit": true
  },

  "planning": {
    "useEnterPlanModeForComplexTasks": true,
    "breakDownLargeTasks": true,
    "clarifyBeforeImplementing": true
  },

  "performance": {
    "useTaskToolForOpenEndedSearch": true,
    "minimizeRedundantReads": true,
    "cacheSearchResults": true
  }
}
