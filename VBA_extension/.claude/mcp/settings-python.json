{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "Python 開発向け MCP設定",
  "_usage": "このファイルの mcpServers 部分を ~/.claude/settings.json にマージ",

  "mcpServers": {
    "_comment_essential": "=== 必須: Python開発基本MCP ===",

    "filesystem": {
      "_description": "Pythonプロジェクトへのファイルアクセス",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:/path/to/python/project"
      ]
    },

    "git": {
      "_description": "Gitリポジトリ操作",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"]
    },

    "memory": {
      "_description": "クラス構造・モジュール情報の記憶",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },

    "_comment_database": "=== データベース連携 ===",

    "sqlite": {
      "_description": "SQLite（軽量DB、開発用）",
      "_enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "--db-path",
        "C:/path/to/database.db"
      ]
    },

    "postgres": {
      "_description": "PostgreSQL接続",
      "_enabled": false,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://user:password@localhost:5432/python_db"
      }
    },

    "_comment_data": "=== データ分析 ===",

    "fetch": {
      "_description": "Webデータ取得・API連携",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"]
    },

    "_comment_advanced": "=== 高度なツール ===",

    "sequential-thinking": {
      "_description": "複雑なアルゴリズム設計・データ分析計画",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },

    "_comment_ml": "=== 機械学習・データサイエンス向け（オプション） ===",

    "jupyter": {
      "_description": "Jupyter Notebook連携",
      "_enabled": false,
      "_note": "コミュニティMCP: github.com/datalayer/jupyter-mcp-server",
      "command": "uvx",
      "args": ["jupyter-mcp-server"]
    },

    "_comment_services": "=== 外部サービス連携（オプション） ===",

    "github": {
      "_description": "GitHub Issue/PR管理",
      "_enabled": false,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "ghp_your_token_here"
      }
    }
  },

  "_python_tips": {
    "virtual_env": "仮想環境のpythonパスを指定する場合はshell MCPを使用",
    "pytest": "テスト実行はClaude Codeの直接Bash実行を推奨",
    "jupyter": "ノートブックファイルはfilesystem MCPでアクセス可能",
    "pip_packages": "パッケージインストールはClaude Codeの直接Bash実行を使用",
    "sdk_version": "Python MCP SDK v1.xが本番推奨（v2は2026年Q1リリース予定）"
  }
}
