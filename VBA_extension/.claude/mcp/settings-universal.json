{
  "$schema": "https://modelcontextprotocol.io/schema/mcp-settings.json",
  "_comment": "汎用MCPサーバー設定 - 全言語・プロジェクト共通",
  "_usage": "このファイルを ~/.claude/settings.json または claude_desktop_config.json にマージして使用",

  "mcpServers": {
    "_comment_essential": "=== 必須サーバー（強く推奨） ===",

    "context7": {
      "_description": "最新のライブラリドキュメント・コード例を自動取得。プロンプトに 'use context7' を追加して使用",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },

    "memory": {
      "_description": "永続メモリ - セッション間で情報を保持するナレッジグラフ",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },

    "sequential-thinking": {
      "_description": "複雑な問題を段階的に分析・解決する思考プロセス",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },

    "_comment_core": "=== コアサーバー（推奨） ===",

    "filesystem": {
      "_description": "ファイルシステムへの安全なアクセス（指定ディレクトリのみ）",
      "_note": "パスは実際のプロジェクトディレクトリに変更してください",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:/Users/nakashima/Desktop/claude"
      ]
    },

    "git": {
      "_description": "Gitリポジトリの操作（履歴、diff、ブランチ情報）",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"]
    },

    "fetch": {
      "_description": "URLからコンテンツを取得しマークダウンに変換",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"]
    },

    "_comment_extended": "=== 拡張サーバー（オプション） ===",

    "brave-search": {
      "_description": "プライバシー重視のWeb検索（APIキー必要）",
      "_api_key_url": "https://brave.com/search/api/",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },

    "puppeteer": {
      "_description": "ヘッドレスブラウザによるWebスクレイピング・自動化",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },

    "github": {
      "_description": "GitHub API連携（Issue/PR操作、リポジトリ情報）",
      "_token_url": "https://github.com/settings/tokens",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },

    "time": {
      "_description": "現在時刻・タイムゾーン情報の取得",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-time"]
    },

    "_comment_collaboration": "=== コラボレーションサーバー（チーム開発向け） ===",

    "slack": {
      "_description": "Slack連携（メッセージ送信、チャンネル操作）",
      "_disabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}"
      }
    },

    "notion": {
      "_description": "Notionドキュメント管理",
      "_disabled": true,
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "NOTION_API_KEY": "${NOTION_API_KEY}"
      }
    },

    "linear": {
      "_description": "Linearプロジェクト管理",
      "_disabled": true,
      "command": "npx",
      "args": ["-y", "@linear/linear-mcp-server"],
      "env": {
        "LINEAR_API_KEY": "${LINEAR_API_KEY}"
      }
    }
  }
}
